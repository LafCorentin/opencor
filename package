#!/bin/sh

appDir=$(cd $(dirname $0); pwd)

$appDir/clean
$appDir/make $*

exitCode=$?

if [ $exitCode -ne 0 ]; then
    exit $exitCode
fi

echo "\033[44;37;1mPackaging OpenCOR...\033[0m"

origDir=`pwd`

cd $appDir/build

cpack

exitCode=$?

if [ "`uname -s`" = "Darwin" ]; then
    packageName="OpenCOR-`date '+%Y-%m-%d'`-macOS"

    mkdir $packageName

    mv $packageName.pkg $packageName

    hdiutil create -srcfolder $packageName $packageName.dmg

    rm -fr $packageName
fi

cd $origDir

if [ $exitCode -eq 0 ]; then
    echo "\033[42;37;1mAll done!\033[0m"
fi

exit $exitCode
